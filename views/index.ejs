<%- include("./partials/header", {title: title}) %>
<%- include("./partials/menu") %>

<div class="columns is-centered is-multiline" style="margin: auto;">
    <% books.map((el, idx) => { %>
    <div class="column is-one-quarter">
        <div class="tile is-ancestor">
            <div class="tile is-vertical">
              <div class="tile">
                <div class="tile is-parent">
                  <div class="tile is-child notification is-info p-2">
                    <p class="title"><a href="/<%= el.id %>"><%= el.title %></a></p>
                    <p class="subtitle"><%= el.description %></p>
                    <p class="subtitle">Авторство: <%= el.authors %></p>
                    <figure class="image is-4by3">
                      <img src="<%= el.fileCover %>">
                    </figure>
                  </div>
                </div>
              </div>
          </div>
        </div>
    </div>
    <% }); %>
  </div>

<%- include("./partials/footer") %>
