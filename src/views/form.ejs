<form method="POST"  action="<%= action %>" enctype="multipart/form-data">
    <div class="field">
        <label class="label" for="inputTitle">Заголовок</label>
        <input type="text" required
               value="<%= book.title %>"
               name="title"
               class="input is-primary"
               id="inputTitle">
    </div>

    <div class="field">
        <label class="label" for="inputDesc">Описание</label>
        <textarea required
                rows="3"
                name="description"
                class="textarea is-primary"
                id="inputDesc"
        ><%= book.description %></textarea>
    </div>

    <div class="field">
        <label class="label" for="inputAuthors">Авторы</label>
        <input type="text" required
               value="<%= book.authors %>"
               name="authors"
               class="input is-primary"
               id="inputAuthors">
    </div>

    <div class="field">
        <label class="label" for="inputFavorite">Избранное</label>
        <input type="text" required
               value="<%= book.favorite %>"
               name="favorite"
               class="input is-primary"
               id="inputFavorite">
    </div>

    <div class="field">
        <label class="label" for="inputFileCover">Обложка</label>
        <input type="text" required
               value="<%= book.fileCover %>"
               name="fileCover"
               class="input is-primary"
               id="inputFileCover">
    </div>

    <div class="file has-name">
        <label class="file-label" for="inputFile">
          <input class="file-input" type="file" name="book-file" value="books/<%= book.fileName %>" id="inputFile">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a file…
            </span>
          </span>
          <span class="file-name">
            <%= book.fileName %>
          </span>
        </label>
      </div>

    <div class="field py-2">
        <button type="submit" class="button is-primary">Сохранить</button>
    </div>
</form>